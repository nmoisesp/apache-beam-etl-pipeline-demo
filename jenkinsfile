pipeline {
    agent any

    options {
        skipStagesAfterUnstable()
    }

    stages {  
        
        stage("build") {     
            agent {
                any {
                    image 'maven:latest'
                    args '-v /root/.m2:/root/.m2'
                }    
            }                  
            steps {
                echo 'build step started...'
                sh 'mvn -B -DskipTests clean package'
            }
        }

        stage("test") {
            agent {
                any {
                    image 'maven:latest'
                    args '-v /root/.m2:/root/.m2'
                }    
            }            
            steps {
                echo 'test step started...'
                sh 'mvn test'
            }
        }

        stage("deploy") {
            steps {
                echo 'deploy step started...'
            }
        }  
    }
}