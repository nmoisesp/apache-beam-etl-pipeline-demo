pipeline {
    agent any

    options {
        skipStagesAfterUnstable()
    }

    stages {

        stage("maven setup") {
            agent {
                docker {
                    image 'maven:3.8.6'
            }    
            steps {
                echo 'maven setup finished...'
            }
        }        
        
        stage("build") {           
            steps {
                echo 'build step started...'
                sh 'mvn -B -DskipTests clean package'
            }
        }

        stage("test") {
            steps {
                echo 'test step started...'
                sh 'mvn test'
            }
        }

        stage("deploy") {
            steps {
                echo 'deploy step started...'
            }
        }  
    }
}