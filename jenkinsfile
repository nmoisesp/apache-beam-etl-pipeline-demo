pipeline {
    agent {docker {image 'maven:3.8.6'}}

    options {
        skipStagesAfterUnstable()
    }

    stages {
        
        stage("build") {
            steps {
                echo 'build step started...'
                sh 'mvn -B -DskipTests clean package'
            }
        }

        stage("test") {
            steps {
                echo 'test step started...'
                sh 'mvn test'
            }
        }

        stage("deploy") {
            steps {
                echo 'deploy step started...'
            }
        }  
    }
}